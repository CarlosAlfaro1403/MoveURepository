<%-include('../base/headerO')-%>

<% if (accidente) { %>
        <div class="card border-secondary">
            <div class="card-header">Editar Accidente</div>
            <div class="card-body">
                <form action="/accidentes/editar/<%= accidente.id_accidente %>" method="POST">
                    <div class="mb-3">
                        <label for="vehiculo" class="form-label">Matricula del Vehiculo</label>
                        <select class="form-control" name="vehiculo" id="vehiculo" tabindex="1">
                            <% vehiculos.forEach( vehiculo => { %>
                                <% if(vehiculo.id_vehiculo === accidente.id_vehiculo) { %>
                                    <option selected="true" value="<%= vehiculo.id_vehiculo %>"><%= vehiculo.matricula %></option>
                                <% } else { %>
                                    <option value="<%= vehiculo.id_vehiculo %>"><%= vehiculo.matricula %></option>
                                <% } %>
                            <% }) %>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="costo" class="form-label">Costo del Accidente</label>
                        <input type="number" step="0.01" value="<%= accidente.costo_accidente  %>" class="form-control" id="costo" name="costo" tabindex="1">
                    </div>
                    <div class="mb-3">
                        <label for="descripcion" class="form-label">Descripcion</label>
                        <input type="text" value="<%= accidente.descripcion_accidente  %>" class="form-control" id="descripcion" name="descripcion" tabindex="1">
                    </div>
                    <button type="submit" class="btn btn-pimary" tabindex="5">Guardar</button>
                    <a href="/accidentes" class="btn btn-secondary">Cancelar</a>
                </form>
            </div>
        </div>
<% } %>

<%-include('../base/footer')-%>