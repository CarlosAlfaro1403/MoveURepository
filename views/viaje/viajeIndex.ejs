<%-include('../base/header')-%>

<h2>Bienvenido a la administraci√≥n del Usuario</h2>
<table class="table table-bordered table-striped text-center mt-4"> 
    <thead> 
        <tr class ="bg-primary text-white"> 
            <th scope="col">Id</th> 
            <th scope="col">Destino viaje</th> 
            <th scope="col">Acciones</th> 
        </tr> 
    </thead> 
    <tbody> 
        <% viajes.forEach( viaje => { %>
            <tr> 
                <td><%= viaje.id_viaje %></td> 
                <td><%= viaje.destino_viaje %></td> 
                <td>
                    <a href="viajes/ver/<%= viaje.id_viaje %>" class="btn btn-outline-info">Ver</a>
                    <a href="viajes/eliminar/<%= viaje.id_viaje %>" class="btn btn-outline-danger">Eliminar</a>
                </td>
            </tr> 
        <% }) %>
    </tbody> 
    <a href="viajes/crear" class="btn btn-outline-primary mt-4" >Asignar nuevo Viaje</a>
</table>


