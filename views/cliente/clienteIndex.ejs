<%-include('../base/headerO')-%>

<h2>Bienvenido a la administración de Clientes</h2>
<table class="table table-bordered table-striped text-center mt-4"> 
    <thead> 
        <tr class ="bg-primary text-white"> 
            <th scope="col">ID</th> 
            <th scope="col">Nombre</th> 
            <th scope="col">Apellido</th> 
            <th scope="col">Dui</th> 
            <th scope="col">Teléfono</th> 
            <th scope="col">Acciones</th> 
        </tr> 
    </thead> 
    <tbody> 
        <% clientes.forEach( cliente => { %>
            <tr> 
                <td><%= cliente.id_cliente %></td> 
                <td><%= cliente.nombre_cliente %></td> 
                <td><%= cliente.apellido_cliente %></td> 
                <td><%= cliente.dui_cliente %></td> 
                <td><%= cliente.telefono_cliente %></td> 
                <td>
                    <a href="clientes/edit/<%= cliente.id_cliente %>" class="btn btn-outline-info">Editar</a>
                    <a href="clientes/eliminar/<%= cliente.id_cliente %>" class="btn btn-outline-danger">Eliminar</a>
                </td>
            </tr> 
        <% }) %>
    </tbody> 
    <a href="clientes/crear" class="btn btn-outline-primary mt-4" >Crear nuevo Cliente</a>
</table>


<%-include('../base/footer')-%>