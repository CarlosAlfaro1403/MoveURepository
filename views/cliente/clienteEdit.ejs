<%-include('../base/headerO')-%>

<% if (cliente) { %>
    <div class="card border-secondary">
        <div class="card-header">Editar Cliente</div>
        <div class="card-body">
            <form action="/clientes/editar/<%= cliente.id_cliente %>" method="POST">
                <div class="mb-3">
                    <label for="nombreCliente" class="form-label">Nombre</label>
                    <input type="text" value="<%= cliente.nombre_cliente %>" class="form-control" id="nombreCliente" name="nombreCliente" tabindex="1" required>
                </div>
                <div class="mb-3">
                    <label for="apellidoCliente" class="form-label">Apellido</label>
                    <input type="text" value="<%= cliente.apellido_cliente %>" class="form-control" id="apellidoCliente" name="apellidoCliente" tabindex="1" required>
                </div>
                <div class="mb-3">
                    <label for="duiCliente" class="form-label">Dui</label>
                    <input type="text" value="<%= cliente.dui_cliente %>" class="form-control" id="duiCliente" name="duiCliente" tabindex="1" required>
                </div>
                <div class="mb-3">
                    <label for="telefonoCliente" class="form-label">Tel√©fono</label>
                    <input type="text" value="<%= cliente.telefono_cliente %>" class="form-control" id="telefonoCliente" name="telefonoCliente" tabindex="1" required>
                </div>
                <button type="submit" class="btn btn-pimary" tabindex="5">Guardar</button>
                <a href="/clientes" class="btn btn-secondary">Cancelar</a>
            </form>
        </div>
    </div>
<% } %>

<%-include('../base/footer')-%>